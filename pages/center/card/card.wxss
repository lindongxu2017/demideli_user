/* pages/center/card/card.wxss */
.card {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  font-size: 32rpx;
  text-align: center;
  background-image: url('http://service.qinhantangtop.com/Uploads/icon/icon_45.png');
  overflow-y: scroll;
  overflow-x: hidden;
}
.headImg-box {
  display: inline-block;
  width: 172rpx;
  height: 172rpx;
  margin-top: 40rpx;
  font-size: 0;
  background: none;
}
image.headimg {
  width: 160rpx;
  height: 160rpx;
}
.header {
  border-radius: 50%;
  border: 6rpx solid #fff;
}

.name {
  font-size: 40rpx;
  color: #fff;
  margin-top: 20rpx;
  background: transparent;
  font-weight: 600;
}
.tell {
    font-size: 34rpx;
    background: transparent;
    color: #fff;
    margin-top: 10rpx;
    margin-bottom: 30rpx;
    font-weight: 600;
}
.tell image {
  display: inline-block;
  width: 20rpx;
  margin-right: 10rpx;
}
.content {
    width: 580rpx;
    height: 580rpx;
    margin: auto;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.8);
    transform:rotate(-45deg);  
    position: relative;
}
.content .center {
    position: absolute;
    border: none;
    background: #fff;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: auto;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}
.content .center .centerCode {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    transform:rotate(45deg);
}
.content image {
    width: 80rpx;
    height: 80rpx;
}
.content view {
    background: transparent;
    font-size: 28rpx;
    color: #2B90F0;
    font-weight: 600;
}
.content>view {
    width: 50%;
    height: 50%;
    display: inline-block;
    background: transparent;
    border: 1px #fff solid;
    box-sizing: border-box;
    text-align: center;
}
/*  去除边框 */
.content .gr, .content .wd {
    border-left: none;
}
.content .gr,  .content .jj{
     border-top: none; 
}
.content .jj, .content .fc {
    border-right: none;
}

.content .wd, .content .fc {
    border-bottom: none;
}
.content .rotate{
    transform:rotate(45deg);
    position: relative;
    display: inline-block;
}
.content .gr .rotate {
    top:90rpx;
    left:20rpx;
}
.content .jj .rotate {
    top:90rpx;
    left:0rpx;
}
.content .wd .rotate {
    top:60rpx;
    left:20rpx;
}
.content .fc .rotate {
    top:60rpx;
    left:-10rpx;
}
.contact {
    display: inline-block;
    width: 35%;
    margin: 0 5%;
    margin-top: 100rpx;
    padding: 20rpx 30rpx;
    color: #2B90F0;
    box-sizing: border-box;
    border-radius: 40rpx;
    font-weight: 600;
}
.contact image {
  display: inline-block;
  width: 30rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.contact.wx image {
  width: 36rpx;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3)
}
.mask > view.QRcode {
  position: absolute;
  top: 10%;
  left: 10%;
  width: 80%;
  border-radius: 10rpx;
  padding-bottom: 40rpx;
}
.mask > view.QRcode text {
  margin-top: 40rpx;
  display: inline-block;
  font-size: 28rpx;
  font-weight: 600;
}
.mask > view.close {
  position: absolute;
  bottom: 15%;
  background: none;
  left: 50%;
  margin-left: -40rpx;
}
.code {
  width: 70%;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
}
.pointer {
  width: 90rpx;
  display: block;
  margin: 0 auto;
  margin-top: 40rpx
}
.mask > view.close image {
  width: 60rpx;
}
.edit {
  position: absolute;
  left:30rpx;
  top: 30rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  padding: 0 20rpx;
  border-radius: 40rpx;
  color: #2B90F0;
}
.share {
    position: absolute;
    right:30rpx;
    top: 30rpx;
    font-size: 24rpx;
    line-height: 54rpx;
    padding: 0 20rpx;
    border-radius: 40rpx;
    color: #2B90F0;
}
