/* pages/center/card/card.wxss */
.card {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  font-size: 32rpx;
  text-align: center;
  background: green;
}
image.headimg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
}

.name {
  font-size: 36rpx;
  color: #fff;
  margin-top: 20rpx;
  background: transparent;
}
.tell {
    font-size: 34rpx;
    background: transparent;
    color: #fff;
    margin-top: 10rpx;
    margin-bottom: 30rpx;
}
.content {
    width: 580rpx;
    height: 580rpx;
    margin: auto;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.8);
    transform:rotate(-45deg);  
    position: relative;
}
.content .center {
    position: absolute;
    border: none;
    background: #fff;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: auto;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}
.content image {
    width: 80rpx;
    height: 80rpx;
}
.content view {
    background: transparent;
    font-size: 28rpx;
    color: #2B90F0;
}
.content>view {
    width: 50%;
    height: 50%;
    display: inline-block;
    background: transparent;
    border: 1px #fff solid;
    box-sizing: border-box;
}
/*  去除边框 */
.content .gr, .content .wd {
    border-left: none;
}
.content .gr,  .content .jj{
     border-top: none; 
}
.content .jj, .content .fc {
    border-right: none;
}

.content .wd, .content .fc {
    border-bottom: none;
}
.content .rotate{
     transform:rotate(45deg); 
    position: relative;
}
.content .gr .rotate {
    top:70rpx;
    left:20rpx;
}
.content .jj .rotate {
    top:70rpx;
    left:0rpx;
}
.content .wd .rotate {
    top:40rpx;
    left:20rpx;
}
.content .fc .rotate {
    top:40rpx;
    left:-10rpx;
}
.contact {
    display: inline-block;
    width: 35%;
    margin: 0 5%;
    margin-top: 100rpx;
    padding: 20rpx 30rpx;
    color: #2B90F0;
    box-sizing: border-box;
    border-radius: 40rpx;
}
