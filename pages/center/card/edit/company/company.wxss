.form {
  padding: 30rpx;
}
.form-wrapper {
  padding-bottom: 40rpx;
  position: relative;
}
.form-label {
  font-size: 30rpx;
  color: #788397;
  margin-bottom: 20rpx;
}
.form-control {
  border: 1px solid #788397;
  border-radius: 10rpx;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}
textarea.form-control {
  width: 100%;
  line-height: 1.5;
  padding: 10rpx;
  min-height: 200rpx;
}
button {
  background-color: #3f51b5 ;
  color: #fff;
  margin-top: 10%;
}