/* pages/center/center.wxss */
.header {
  padding: 20rpx 60rpx;
  position: relative;
  font-size: 0;
}
.header > view {
  display: inline-block;
  vertical-align: top;
}
.header .img {
  width: 30%;
  height: 25.2vw;
}
.header .img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.header .info {
  width: calc(70% - 40rpx);
  margin-left: 40rpx;
  height: 25vw;
  font-size: 32rpx;
}
.header .info text {
  display: block;
}
.header .info text.name {
  font-size: 40rpx;
  color: #788397;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 14rpx;
}
.header .info text.name.auth {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.header .info text.identify {
  font-size: 26rpx;
  color: #93a1ba;
  margin-bottom: 26rpx;
}
.header .info button {
  background-color: #fff;
  color: #ad9355;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  display: inline-block;
  padding: 0 30rpx;
  border-radius: 10rpx;
}
.header .info button::after {
  border-color: #ad9355;
}
.link-list {
  padding: 0 30rpx;
}
.link-wrapper {
  position: relative;
  padding: 40rpx 0 30rpx;
}
.link-wrapper > view {
  display: inline-block;
  vertical-align: middle;
}
.link-wrapper > view.icon {
  position: absolute;
  right: 0;
  top: 44rpx;
  display: block;
  width: 16rpx;
  height: 28rpx;
}
.link-wrapper > view.icon image {
  width: 100%;
  height: 100%;
}
.type-wrapper {
  padding: 20rpx 30rpx 0;
  display: flex;
  min-height: 25vw;
}
.type-wrapper > view.type-item {
  flex: 1;
  width: 0;
  height: 25vw;
  padding: 20rpx;
  display: inline-block;
  box-sizing: border-box;
  font-size: 28rpx;
  text-align: center;
}
.type-wrapper > view.type-item image {
  width: 50%;
  height: 45%;
}
.type-wrapper > view.type-item view {
  font-size: 28rpx;
  color: #585B67;
  margin-top: 20rpx;
}

