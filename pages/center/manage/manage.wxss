/* pages/center/manage/manage.wxss */
page {
  background-color: #f2f2f2;
}
view {
  font-size: 32rpx;
  background: none;
}
.header {
  padding: 70rpx 40rpx;
  position: relative;
  font-size: 0;
  background-color: #3f51b5;
}
.header > view {
  display: inline-block;
  vertical-align: top;
}
.header .img {
  width: 30%;
  height: 26.8vw;
}
.header .img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.header .info {
  width: 70%;
  height: 25vw;
  font-size: 32rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  color: #fff;
}
.header .info > text {
  display: block;
}
.header .info > text.name {
  font-size: 50rpx;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
  min-height: 60rpx;
}
.header .info > text.identify {
  font-size: 26rpx;
  color: #abc9ff;
  margin-bottom: 26rpx;
  padding-left: 10rpx;
}
.header .info .phone {
  color: #abc9ff;
  font-size: 0;
}
.header .info .phone image,
.header .info .phone text {
  vertical-align: middle;
}
.header .info .phone text {
  line-height: 1;
  font-size: 40rpx;
}
.header .info .phone image {
  width: 34rpx;
  height: 34rpx;
}
.header .info .phone image.icon-phone {
  width: 25rpx;
  height: 38rpx;
  margin-right: 10rpx;
}
.header .info .phone text {
  margin: 0 10rpx;
}
.cell-title {
  padding: 40rpx 30rpx 18rpx;
  font-size: 30rpx;
  color: #788397;
  background: #fff;
}
.header .auth-btn {
  position: absolute;
  font-size: 32rpx;
  display: block;
  right: 20rpx;
  bottom: 20rpx;
}
.company {
  position: relative;
  padding: 30rpx;
  background: #fff;
}
.border-bottom {
  position: relative;
}
.border-bottom::after {
  content: '';
  position: absolute;
  width: calc(100% - 60rpx);
  height: 1px;
  left: 30rpx;
  background-color: #e5e5e5;
  bottom: 0;
}
.company .charge {
  font-size: 30rpx;
  color: #788397;
  margin-top: 20rpx;
}
.company .status {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 30rpx;
}

.add {
  background: #fff;
  height: 88rpx;
  margin-top: 20rpx;
  border-radius: 0;
  font-size: 30rpx;
  color: #3f51b5;
  line-height: 88rpx;
}
.add::after {
  display: none;
}