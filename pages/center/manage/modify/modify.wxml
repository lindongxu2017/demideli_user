<view class='form'>
  <view class='form-wrapper border-b'>
    <view class='form-label'>手机号</view>
    <input class='form-control' placeholder='请输入新手机号' placeholder-style='color:#d4d4d4' type='number' value="{{phone}}" data-key='phone' bindinput='inputValue'></input>
  </view>
  <view class='form-wrapper'>
    <view class='form-label'>验证码</view>
    <input class='form-control' placeholder='请输入验证码' placeholder-style='color:#d4d4d4' type='number' value="{{code}}" data-key='code' bindinput='inputValue'></input>
    <view class='form-after'><button bindtap='getcode'>{{codeTitle}}</button></view>
  </view>
</view>
<view class='my-btn'>
  <button bindtap='submit'>提交</button>
</view>