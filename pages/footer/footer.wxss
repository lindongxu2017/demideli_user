/* pages/footer/footer.wxss */
.footer {
  position: fixed;
  width: 100%;
  height: 120rpx;
  display: flex;
  bottom: 0;
}
.footer > view {
  flex: 1;
  text-align: center;
  font-size: 0;
}
.footer > view view {
  font-size: 24rpx;
  color: #788397;
  margin-top: -4rpx;
}
.footer > view view.active {
  color: #3F51B5;
}
.footer image {
  width: 70rpx;
  height: 70rpx;
  margin-top: 6rpx;
  display: inline-block;
}