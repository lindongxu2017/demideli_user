/* pages/center/suggest/suggest.wxss */
page {
  background-color: #f2f2f2;
}
.suggest-wrapper {
  padding: 20rpx;
}
.title {
  font-size: 32rpx;
  color: #788397;
}
.section textarea {
  margin-top: 20rpx;
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #eaecf2;
  font-size: 30rpx;
}
.my-btn {
  width: 100%;
  padding: 0 25%;
  box-sizing: border-box;
  background-color: #f2f2f2;
  margin-top: 62rpx;
}
.my-btn button {
  background-color: #3f51b5;
  border-radius: 20rpx;
  color: #fff;
}