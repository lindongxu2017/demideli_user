/**index.wxss**/
page {
  background-color: #f2f2f2;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.flex {
  display: flex;
  position: absolute;
  width: 100%;
  height: calc(100% - 100rpx);
  background: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.flex > view {
  flex: 1;
}
.flex image {
  width: 100%;
  height: 100%;
}
.flex > view.left {
  margin-right: 20rpx;
}
.flex > view.left view {
  width: 100%;
  height: calc(50% - 10rpx);
  height: -moz-calc(50% - 10rpx);
  height:  -webkit-calc(50% - 10rpx);
  position: relative;
}
.flex > view.left view.up {
  margin-bottom: 20rpx;
}
.flex > view.right view {
  width: 100%;
  height: calc(calc(100% / 3) - calc(40rpx / 3));
  height: -moz-calc(-moz-calc(100% / 3) - -moz-calc(40rpx / 3));
  height: -webkit-calc(-webkit-calc(100% / 3) - -webkit-calc(40rpx / 3));
  position: relative;
}
.flex > view.right view.middle {
  margin: 20rpx 0;
}
.flex > view text {
  position: absolute;
  width: 36rpx;
  color: #3F51B5;
  font-size: 30rpx;
  /*text-shadow: 0 0 1px #333;*/
}
.left .up text {
  right: 10rpx;
  top: 20rpx;
}
.left .down text {
  right: 10rpx;
  top: 50rpx;
}
.right .top text {
  top: 20rpx;
  right: 0rpx;
}
.right .middle text {
  top: 50rpx;
  right: 0rpx;
}
.right .bottom text {
  top: 20rpx;
  right: 0rpx;
}