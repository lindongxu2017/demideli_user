<!--pages/message/room/room.wxml-->
<scroll-view scroll-y scroll-top="{{scrollTop}}" class='chat-wrapper'>
    <view wx:for="{{list}}" wx:key="key" class='list-item {{item.type == 1 ? "left" : "right"}}'>
        <view class='headimg' wx:if="{{item.type == 1}}"><image src="{{url}}"></image></view>
        <view class='content-wrapper'>
            <view class='name'>{{item.name}}</view>
            <view class='content'>{{item.content}}</view>
        </view>
        <!-- <view>{{item.type == 2}}</view> -->
    <view class='headimg' wx:if="{{item.type == 2}}"><image src="{{receive_headimgurl}}"></image></view>
    </view>
</scroll-view>
<view class='footer-wrapper'>
  <input placeholder='请输入文字' placeholder-style='color:#bababa' value="{{sendMsg}}" bindinput='change' bindconfirm='send'></input>
  <button type='default' bindtap='send'>发送</button>
</view>

