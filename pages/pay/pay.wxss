.pay-info {
  /*padding: 0 30rpx 50rpx;*/
  font-size: 32rpx;
}
.pay-info > view {
  padding: 0 30rpx;
  background-color: #F7F8FC;
}
.pay-info text {
  display: block;
}
.pay-info text.label {
  padding: 36rpx 0 20rpx;
  font-size: 30rpx;
  color: #788397;
}
.pay-info text.label + text {
  padding-bottom: 20rpx;
  font-size: 30rpx;
  color: #3d3f4c;
}
.border-b::after {
  background-color: #bababa;
}
.pay-info input {
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  margin-bottom: 36rpx;
}
.btn {
  box-sizing: border-box;
  padding: 0 20%;
  margin: 70rpx 0;
  background: none;
}
.btn button {
  border-radius: 20rpx;
  background-color: #3f51b5;
  color: #fff;
}