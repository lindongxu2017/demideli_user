/* pages/pay/pay.wxss */
page {
  background-color: #f2f2f2;
}
.need-pay {
  padding: 50rpx 30rpx;
  color: #3d3f4c;
  margin-bottom: 14rpx;
}
.need-pay .cell-title {
  font-size: 26rpx;
  color: #788397;
  margin-bottom: 30rpx;
}
.need-pay .money {
  font-size: 70rpx;
}
.service-wrapper {
  margin-bottom: 14rpx;
  padding: 0 30rpx;
}
.cell-label {
  padding-top: 40rpx;
}
.cell-label image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
  vertical-align: middle;
}
.cell-label text {
  color: #3f51b5;
  font-size: 34rpx;
  vertical-align: middle;
}
.cell-content {
  padding: 30rpx 0 42rpx 64rpx;
}
.cell-content view {
  font-size: 36rpx;
  color: #788397;
}
.pay-way {
  padding: 50rpx 30rpx;
}
.pay-way .title {
  font-size: 26rpx;
  color: #788397;
}
.way-item {
  position: relative;
  margin-top: 60rpx;
  box-sizing: border-box;
  border: 1px solid #3f51b5;
  padding: 20rpx 30rpx;
  border-radius: 100rpx;
  color: #3f51b5;
}
.way-item.active {
  background-color: #3f51b5;
  color: #fff;
}
.way-item image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.way-item text {
  font-size: 36rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.way-item text.wx-pay {
  /*color: #00ce12;*/
}
.way-item text.public-pay {
  /*color: #11c2e8;*/
}
.radio-circle {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 48rpx;
  height: 48rpx;
  border: 1px solid #3f51b5;
  border-radius: 50%;
}
.radio-circle icon {
  margin: 6rpx 0 0 6rpx;
}
.active .radio-circle {
  border-color: #fff;
  background-color: #3f51b5;
}
