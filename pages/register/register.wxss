/* pages/register/register.wxss */
@import "../../wxParse/wxParse.wxss";
view, button {
  font-size: 32rpx;
}
.wellcome {
  padding: 70rpx 60rpx 104rpx;
  font-size: 60rpx;
  color: #3f51b5;
}
.form {
  padding: 20rpx 60rpx;
}
.form-wrapper {
  padding: 30rpx 0;
  position: relative;
}
.form-label, .form-control {
  display: inline-block;
  vertical-align: middle;
}
.form-label {
  width: 160rpx;
  font-size: 38rpx;
}
.form-control {
  width: calc(100% - 160rpx);
  width: -moz-calc(100% - 160rpx);
  width: -webkit-calc(100% - 160rpx);
}
.form-after {
  position: absolute;
  right: 0;
  top: 24rpx;
}
.form-after button {
  font-size: 28rpx;
  color: #3f51b5;
  background: none;
}
.form-after button {
  height: 60rpx;
  line-height: 60rpx;
}
.form-after button::after {
  display: none;
}
.protocol {
  padding-left: 60rpx;
  margin-top: 100rpx;
  font-size: 32rpx;
  line-height: 1;
}
.my-btn {
  position: absolute;
  width: 100%;
  padding: 0 25%;
  box-sizing: border-box;
  bottom: 20%;
}
.my-btn button {
  background-color: #3f51b5;
  color: #fff;
  border-radius: 20rpx;
}
.checkbox {
  font-size: 26rpx;
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 20rpx;
  border: 1px solid #d4d4d4;
  border-radius: 4rpx;
  text-align: center;
  line-height: 36rpx;
}
.protocol-text {
  display: inline-block;
  vertical-align: middle;
  color: #787878;
  font-size: 30rpx;
}
.protocol-content {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  z-index: 2;
  box-sizing: border-box;
  padding: 100rpx 80rpx;
}
.protocol-content > view {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 30rpx;
  position: relative;
}
.content-wrapper {
  width: 100%;
  height: calc(100% - 52rpx);
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
.close {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  text-align: center;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}