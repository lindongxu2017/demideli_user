page {
  background-color: #f2f2f2;
}
swiper {
  position: absolute;
  width: 100%;
  height: 100%;
}
view {
  background: none;
}
swiper-item > view {
  height: 100%;
  background-color: #f2f2f2;
  position: relative;
}
.up {
  width: 100%;
  height: 60%;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  background-color: #3F51B5;
}
.header {
  padding: 30rpx;
}
.title {
  color: #fff;
  font-size: 56rpx;
}
.dot > view {
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 20rpx;
  border: 1px solid #fff;
}
.right-page .dot > view:first-child {
  background: none;
}
.left-page .dot > view:last-child {
  background: none;
}
.num {
  font-size: 100rpx;
  color: #fff;
  text-align: center;
  margin-top: 30rpx;
}
.down {
  position: absolute;
  bottom: 0;
  left: 30rpx;
  width: calc(100% - 60rpx);
  height: 60%;
  background-color: #fff;
  border-top-left-radius: 14rpx;
  border-top-right-radius: 14rpx;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.list-item {
  padding: 30rpx 0;
  position: relative;
}
.time {
  font-size: 28rpx;
  color: #93A1BA;
}
.desc {
  color: #585B67;
  margin-top: 10rpx;
}
.after {
  position: absolute;
  right: 0;
  top: 58rpx;
  font-size: 36rpx;
  color: #3F51B5;
}

.switch-icon {
  position: fixed;
  width: 80rpx;
  height: 32rpx;
  z-index: 2;
  top: 60rpx;
  right: 30rpx;
}