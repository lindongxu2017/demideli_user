.center {
  width: 120%;
  margin-left: -10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx;
  padding-bottom: 150rpx;
  box-sizing: border-box;
  border-radius: 0rpx 0rpx 50rpx 50rpx;
  text-align: center;
  background-color: #3f51b5;
  border-bottom-left-radius: 30% ;
  border-bottom-right-radius: 30%;
  position: relative;
}

.top_box {
  /* background: #ccc; */
  background: #3f51b5;
  /* height: 700rpx; */
}

.center_head {
  border-radius: 50%;
  width: 300rpx;
  height: 300rpx;
  margin: 60rpx auto 40rpx;
}

.top_box_radius {
  width: 100%;
  height: 120rpx;
  border-radius: 0 0 120rpx 120rpx;
  background: #fff;
  position: absolute;
  z-index: -1;
}

.menu_list {
  position: absolute;
  bottom: -80rpx;
  text-align: left;
  width: calc(83.3333333% - 60rpx);
  height: 240rpx;
  margin: auto;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
  background-image: url(http://service.qinhantangtop.com/Uploads/icon/icon_22.png);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: 0 120rpx;
}
.menu_list::after {
  content: '';
  position: absolute;
  width: 1px;
  height: 40%;
  background: #D4D4D4;
  top: 30%;
  left: 50%;
}
.menu_list > view {
  position: relative;
  display: inline-block;
  font-size: 32rpx;
  width: 50%;
  height: 100%;
  background: none;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  color: #93A1BA;
}
.menu_list > view view {
  text-align: center;
  white-space: nowrap;
  font-size: 64rpx;
  margin-top: 30rpx;
  background: none;
}
.single {
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  background: none;
  top: 50rpx;
  right: 40rpx;
  margin-top: 0!important;
}
.single::after {
  content: '';
  position: absolute;
  top: 0;
  right: -10rpx;
  height: 0;
  width: 0;
  border: 10rpx solid;
  border-color: #3F51B5 transparent transparent;
  transform: rotateZ(-90deg);
  -ms-transform: rotateZ(-90deg); /* IE 9 */
  -moz-transform: rotateZ(-90deg); /* Firefox */
  -webkit-transform: rotateZ(-90deg); /* Safari å’Œ Chrome */
  -o-transform: rotateZ(-90deg); /* Opera */
}
